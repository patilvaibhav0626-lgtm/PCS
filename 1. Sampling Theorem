% Sampling Theorem
fm = 50;
tf = 0.05;
t = 0 : 0.00005 : tf;
x = cos(2*pi*fm*t);
subplot(4,1,1);
plot(t,x);
xlabel('Time');
ylabel('Aplitude');
title('Sinusoidal Sighal');

% Case 1 (fs < 2fm)
fs1 = 1.3*fm;
n1 = 0 : 1/fs1 : tf;
xn1 = cos(2*pi*fm*n1);
subplot(4,1,2);
plot(t,x,'b',n1,xn1,'r');
xlabel('Time');
ylabel('Aplitude');
title('Sampled Signal 1');

% Case 2 (fs = 2fm)
fs2 = 2*fm;
n2 = 0 : 1/fs2 : tf;
xn2 = cos(2*pi*fm*n2);
subplot(4,1,3);
plot(t,x,'b',n2,xn2,'k');
xlabel('Time');
ylabel('Aplitude');
title('Sampled Signal 2');

% Case 3 (fs > 2fm)
fs3 = 20*fm;
n3 = 0 : 1/fs3 : tf;
xn3 = cos(2*pi*fm*n3);
subplot(4,1,4);
plot(t,x,'b',n3,xn3,'k');
xlabel('Time');
ylabel('Aplitude');
title('Sampled Signal 3');
